<!DOCTYPE html>
<html>
    {{> head}}
    <body class="{{body_class}}"> 
        {{!Sidenav and Navbar}}
        <nav id="nav-trans" class="transparent">
            <div id="slide-out" class="side-nav fixed blue-grey darken-4">
                <div class="navwrapper container">  
                    <a href="/"><h1 id="nav-head">{{@blog.title}}</h1></a>
                    <span>{{@blog.description}}</span>
                    {{navigation}}
                    {{!-- {{> social_bar}} --}}
                </div>
            </div>
            <a href="#" data-activates="slide-out" class="button-collapse">
                <i class="material-icons">&#xE5D2;</i>
            </a>
            <div class="mobile-header">{{@blog.title}}</div>
        </nav>
        {{! Content }}
        {{{ body }}}
        {{!footer}}
        <footer class="page-footer blue-grey darken-3">
            <div class="container">
                <div class="row">
                    <div class="col l6 s12 white-text">
                        <h4>{{@blog.title}}</h4>
                        <p>{{@blog.description}}</p>
                    </div>
                    <div class="col l6 s12 white-text">
                        <h4>Apps</h4>
                        <a href="#">Monster Creation</a>
                    </div>
                </div>
            </div>
            <div class="footer-copyright">
                <div class="container">
                    <a href="http://creativecommons.org/licenses/by-sa/4.0/">
                              Creative Commons BY-SA 4.0
                    </a> - 2016
                    <div class="right">
                        Powered by <a href="https://ghost.org/">Ghost</a>
                    </div>
                </div>
            </div>
        </footer> 
        {{!Script}}
        <script src="{{asset "js/jquery-2.1.4.min.js"}}"></script>
        <script src="{{asset "js/materialize.min.js"}}"></script>
        <script src="{{asset "js/script.min.js"}}"></script>
        {{! Ghost body injection }}
        {{ghost_foot}}
    </body>
</html>